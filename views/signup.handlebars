<div class="card rounded-0 mb-3">
    <div class="card-header rounded-0 px-4 d-flex justify-content-between align-items-center">
        <h3 class="m-0">Sign Up</h2>
    </div>
    <div class="card-body px-4">
        <form class="signup-form">
            <label for="username">Username</label>
            <input type="text" class="form-control mb-3 mt-1 rounded-0" id="username" />
            <label for="password">Password</label>
            <input type="password" class="form-control mb-3 mt-1 rounded-0" id="password" />
            <div class="d-grid">
                <button type="submit" class="btn bg-secondary rounded-1">Sign Up!</button>
            </div>
        </form>
        <div class="mt-2">
            <a href="/login">Login instead</a>
        </div>
    </div>
</div>

<script src="./js/signup.js"></script>
