<div class="card rounded-0">
    <div class="card-header rounded-0 px-4 d-flex justify-content-between align-items-center">
        <h3 class="m-0">Edit Post</h3>
    </div>
    <div class="card-body px-4">
        <form class="edit-post-form">
            <label for="title">Title</label>
            <input type="text" class="form-control mb-3 mt-1 rounded-0" id="title" value="{{post.title}}" data-post-id="{{post.id}}"/>
            <label for="content">Content</label>
            <textarea class="form-control mb-3 mt-1 rounded-0" id="content" rows="5">{{post.content}}</textarea>
            <div class="d-grid gap-2">
                <button type="submit" class="btn bg-secondary rounded-1" data-type="update">Update Post</button>
                <button type="submit" class="btn bg-secondary rounded-1" data-type="delete">Delete Post</button>
            </div>
        </form>
    </div>
</div>

<script src="../js/edit-post.js"></script>
